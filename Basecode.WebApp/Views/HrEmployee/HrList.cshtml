@page "/hrList"
@model Basecode.WebApp.Views.HrEmployee.HrListModel
@{

}

<h1 class="mb-3 header-bg">LIST OF HRs</h1>

<!DOCTYPE html>
<html>
	<head>
		<title>LIST OF HRs</title>
		<link rel="stylesheet" href="~/css/hrlist.css" />
	</head>

	<p>
		<a class="btn btn-primary create-account-button">Create Account</a>
	</p>

	<table class="table">
		<thead>
			<tr class="table-header">
				<th>ID</th>
				<th>Name</th>
				<th>Email Address</th>
				<th>Actions</th>
			</tr>
		</thead>
		@for (int i = 0; i < 10; i++)
		{
			<tr>
				<td>ID</td>
				<td>Lastname, Firstname M.</td>
				<td>Email</td>
				<td>
					<a asp-route-id="ID">
						<img src="~/images/icons/edit.png" alt="Edit" class="action-icon" />
					</a>
					<a asp-route-id="ID">
						<img src="~/images/icons/delete.png" alt="Delete" class="action-icon" />
					</a>
				</td>
			</tr>
		}
	</table>
<html>