@using Basecode.Data.Dtos.Interviews;
@using static Basecode.Data.Enums.Enums;
@using Basecode.Services.Interfaces;
@model InterviewsUpdationDto
@inject IApplicantService ApplicantService
@inject IInterviewersService InterviewersService
@{
    ViewData["Title"] = "Edit Interview";
    Layout = "_SideBarAdmin";
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/CreateInterview.css" />
    <script src="https://kit.fontawesome.com/b68ff1da95.js" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/timepicker/1.3.5/jquery.timepicker.min.css">
    <script src="//cdnjs.cloudflare.com/ajax/libs/timepicker/1.3.5/jquery.timepicker.min.js"></script>
}

<div class="container-header shadow-sm">
    <div class="row">
        <div class="col-auto d-flex align-items-lg-center ps-5">
            <h2 class="m-0 ps-2">@ViewData["Title"]</h2>
        </div>
    </div>
</div>
<div class="buffer"></div>

<form method="post" asp-controller="HR" asp-action="UpdateInterview" class="create-interview-form">
    <input type="hidden" asp-for="Id" />
    <input type="hidden" value="@Model.InterviewerId" asp-for="InterviewerId" />
    <div>
        <a asp-action="Interview" class="back d-flex gap-2 text-decoration-none align-items-center justify-content-start">
            <i class="fa-solid fa-arrow-left"></i>
            <p class="m-0">Back</p>
        </a>
    </div>
    <div class="section-interview">
        <div class="d-flex flex-row align-items-center">
            <p class="section-text">
                INTERVIEWER DETAILS
            </p>
        </div>
        <div class="line"></div>
    </div>
    <div class="pb-2">
        <div class="row">
            <div class="col">
                <div class="form-group">
                    <label for="interviewerName">Name:</label>
                    <input type="text" class="form-control" id="interviewerName" placeholder="@InterviewersService.GetById(@Model.InterviewerId).Name" readonly>
                </div>
            </div>
            <div class="col">
                <div class="form-group">
                    <label for="email">Email:</label>
                    <input type="email" class="form-control" id="interviewerEmail" placeholder="@InterviewersService.GetById(@Model.InterviewerId).Email" readonly>
                </div>
            </div>
        </div>
    </div>
    <div class="section-interview">
        <div class="d-flex flex-row align-items-center">
            <p class="section-text">
                APPLICANT
            </p>
        </div>
        <div class="line"></div>
    </div>
    <div class="pb-2">
        <div class="row align-items-center">
            <div class="col-md-auto">
                <label for="applicantName">Name:</label>
            </div>
            <div class="col">
                <select asp-for="ApplicantId" class="form-select w-50" name="ApplicantId">
                    <option selected disabled value="">Select an Applicant...</option>
                    @foreach (var applicants in ApplicantService.RetrieveAll())
                    {
                        <option value="@applicants.Id">@applicants.FirstName @applicants.MiddleName @applicants.LastName</option>
                    }
                </select>
            </div>
        </div>
    </div>
    <div class="section-interview">
        <div class="d-flex flex-row align-items-center">
            <p class="section-text">
                AVAILABILITY
            </p>
        </div>
        <div class="line"></div>
    </div>
    <div class="pb-2">
        <div class="row align-items-center">
            <div class="col">
                <label for="date">Date:</label>
                <input class="form-control" id="date" type="date" name="InterviewDate" asp-for="InterviewDate" required />
            </div>
            <div class="col d-flex flex-row gap-4">
                <div class="col w-25">
                    <label for="timeStart">Time Start:</label>
                    <input class="form-control timepicker" id="timeStart" type="text" name="TimeStart" asp-for="TimeStart" required />
                </div>
                <div class="col w-25">
                    <label for="timeEnd">Time End:</label>
                    <input class="form-control timepicker" id="timeEnd" type="text" name="TimeEnd" asp-for="TimeEnd" required />
                </div>
            </div>
        </div>
    </div>
    <div class="section-interview">
        <div class="d-flex flex-row align-items-center">
            <p class="section-text">
                INTERVIEW
            </p>
        </div>
        <div class="line"></div>
    </div>
    <div class="pb-2">
        <div class="row form-row">
            <div class="col-12 form-group">
                <label for="interviewType">Interview Type:</label>
                <select asp-for="InterviewType" class="form-select w-50" id="interviewType" name="interviewType" required>
                    <option selected disabled value="N/A"><em>Select an interview type...</em></option>
                    <option value="@InterviewType.HRInterview">For HR Interview</option>
                    <option value="@InterviewType.TechnicalInterview">For Technical Interview</option>
                    <option value="@InterviewType.TechnicalExam">For Technical Exam</option>
                    <option value="@InterviewType.UndergoingBackgroundCheck">Undergoing Background Check</option>
                    <option value="@InterviewType.FinalInterview">For Final Interview</option>
                </select>
            </div>
        </div>
    </div>
    <div class="d-grid d-md-flex justify-content-md-end">
        <button type="submit" class="btn b-blue px-4">EDIT SCHEDULE</button>
    </div>
</form>

<script>
    $(document).ready(function () {
        $('input.timepicker').timepicker({
            timeFormat: 'h:mm p',
            interval: 30,
            minTime: '0',
            maxTime: '11:30pm',
            dynamic: false,
            dropdown: true,
            scrollbar: false
        });
        $('#addSchedule').click(function () {
            document.getElementById("date").value;
            document.getElementById("timeStart").value;
            document.getElementById("timeEnd").value;
        });
    });
</script>

<!--<script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"></script> -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>

<div class="modal fade" id="overlapModal" tabindex="-1" role="dialog" aria-labelledby="overlapModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content px-3 py-4">
            <div class="modal-body">
                <p class="text-center"><strong>Inputed Date and Time ovelap with other Interviews.</strong></p>
                <div class="d-flex justify-content-center align-items-center gap-3">
                    <button type="button" class="btn b-red px-5 mt-2">OKAY</button>
                </div>
            </div>
        </div>
    </div>
</div>
