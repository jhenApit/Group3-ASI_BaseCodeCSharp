<!DOCTYPE html>

<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="~/css/sidebar.css" />
    <link href='https://unpkg.com/boxicons@2.0.7/css/boxicons.min.css' rel='stylesheet'>
</head>
<body>
    <div class="sidebar open">
        <a class="logo-details">
            <img src="~/images/asi-a-logo.jpg" alt="Alliance Icon">
            <div class="logo-name">
                <span class="company-name">lliance</span>
                <span class="company-type">Alliance Software Incorporated</span>
            </div>
        </a>
        <ul class="nav-links">
            <li class="nav-item clicked">
                <a href="#">
                    <i class='bx bxs-grid-alt'></i>
                    <span class="link_name">Dashboard</span>
                </a>
                <ul class="sub-menu blank">
                    <li><p class="link_name" href="#">Dashboard</p></li>
                </ul>
            </li>
            <li class="nav-item">
                <a href="#">
                    <i class='bx bxs-user-account'></i>
                    <span class="link_name">Users</span>
                </a>
                <ul class="sub-menu blank">
                    <li><p class="link_name" href="#">Users</p></li>
                </ul>
            </li>
            <li class="nav-item"> 
                <div class="icon-link">
                    <a href="#">
                        <i class='bx bxs-briefcase'></i>
                        <span class="link_name">Jobs</span>
                    </a>
                        <i class='bx bxs-chevron-down arrow'></i>
                </div>
                <ul class="sub-menu">
                    <li><p class="link_name" href="#">Jobs</p></li>
                    <li><a href="#" class="sub-menu-item">Job Posting</a></li>
                    <li><a href="#" class="sub-menu-item">Applicants</a></li>
                </ul>
            </li>
            <li class="nav-item">
                <div class="icon-link">
                    <a href="#">
                        <i class='bx bxs-calendar-check'></i>
                        <span class="link_name">Schedules</span>
                    </a>
                    <i class='bx bxs-chevron-down arrow'></i>
                </div>
                <ul class="sub-menu">
                    <li><p class="link_name" href="#">Schedules</p></li>
                    <li><a href="#" class="sub-menu-item">Interviews</a></li>
                </ul>
            </li>
            <li class="nav-item">
                <div class="logout-section">
                    <a href="#">
                        <i class='bx bx-log-out'></i>
                        <span class="link_name">Logout</span>
                    </a>
                    <ul class="sub-menu blank">
                        <li><a class="link_name" href="#">Logout</a></li>
                    </ul>
                </div>
            </li>
        </ul>
    </div>

    <div class="main-content">
        <div class="menu-icon">
            <i class='bx bx-menu'></i>
        </div>
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/sidebar.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>