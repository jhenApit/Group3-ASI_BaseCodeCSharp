@using Basecode.Data.Dtos
@model HREmployeeUpdationDto
@{
    ViewData["EditHrAccount"] = "EDIT HR EMPLOYEE ACCOUNT INFORMATION";
    Layout = "_Validation";
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/CreateAccount.css" />
    <script src="https://kit.fontawesome.com/b68ff1da95.js" crossorigin="anonymous"></script>
}


<body>
    <div class="container-fluid h-100">
        <div class="flex-nowrap">
            <div class="row h-100">
                <div class="col-auto bg-black col-md-4 col-lg-2 min-vh-100 d-flex flex-column p-0">
                    <a asp-action="AdminDashboard" class="navbar-brand px-3 py-4 m-0 d-flex justify-content-center align-items-center">
                        <img src="~/images/asi-logo.svg" alt="ASI Logo" class="logo-img w-100">
                    </a>
                    <div class="container p-0">
                        <ul class="nav nav-pills flex-column mt-2">
                            <li class="nav-item py-2 py-sm-0">
                                <a asp-action="Login" class="py-4 rounded-0 nav-link bg-gray text-white" aria-current="page">
                                    <i class="fs-5 fa-brands fa-windows"></i>
                                    <span class="fs-4 ms-3 d-none d-sm-inline">
                                        Dashboard
                                    </span>
                                </a>
                            </li>
                            <li class="nav-item py-2 py-sm-0">
                                <a class="py-4 rounded-0 nav-link active text-white">
                                    <i class="fs-5 fa-solid fa-list"></i>
                                    <span class="fs-4 ms-3 d-none d-sm-inline">
                                        HR List
                                    </span>
                                </a>
                            </li>
                        </ul>
                    </div>
                    <div class="position-absolute bottom-0">
                        <a asp-action="HrList" class="py-4 rounded-0 nav-link text-white">
                            <i class="fa-sharp fa-solid fa-right-from-bracket"></i>
                            <span class="fs-4 ms-3 d-none d-sm-inline">
                                Logout
                            </span>
                        </a>
                    </div>
                </div>

                <div class="col content d-flex flex-column p-0">
                    <div class="bg">
                        <a asp-action="HrList" class="text-decoration-none">
                            <i class="fa-solid fa-less-than back"></i>
                        </a>
                        <h1 class="header-text">
                            EDIT DETAILS
                        </h1>
                    </div>
                    <div class="desc">
                        <p class="p-0">
                            As an admin, you are able to edit an account for the HRs
                            in your company.
                        </p>
                    </div>
                        <form asp-action="EditHrAccount" method="POST">
                            <input type="hidden" asp-for="Id" />
                            <div class="container-fluid text-black w-50">
                                @if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
                                {
                                    <div class="alert alert-danger" role="alert">
                                        @Html.Raw(ViewBag.ErrorMessage)
                                    </div>
                                }
                                <div class="form-floating mb-3">
                                    <input asp-for="Name" type="text" class="form-control" id="floatingInput"
                                           placeholder="name">
                                    <label for="floatingInput" class="form-label">Name</label>
                                    <span asp-validation-for="Name" class="text-danger"></span>
                                </div>
                                <div class="form-floating mb-3">
                                    <input asp-for="Email" type="email" class="form-control" id="floatingInput"
                                           placeholder="name@example.com">
                                    <label asp-for="Email" for="floatingInput" class="form-label">Email Address</label>
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>
                                <div class="form-floating mb-3">
                                    <input asp-for="Password" type="password" class="form-control" id="floatingInput"
                                           placeholder="password">
                                    <label asp-for="Password" for="floatingInput" class="form-label">Password</label>
                                    <span asp-validation-for="Password" class="text-danger"></span>
                                </div>
                                <div class="form-check form-switch">
                                    <input class="form-check-input" type="checkbox" id="flexSwitchCheckDefault">
                                    <label class="form-check-label" for="flexSwitchCheckDefault">Set as Admin</label>
                                </div>
                                <div class="d-grid gap-2 mb-5">
                                    <button type="submit" value="Login" class="btn btn-danger">Update Account</button>
                                </div>
                            </div>
                        </form>
                </div>
            </div>
        </div>
    </div>
</body>


@section Scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}