@page
@model LoginModel

@{
    ViewData["Title"] = "Login";
    Layout = null;
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
}
<script>
    function cancelForm() {
        window.location.href = "/";
    }
</script>

<body>
    <div class="container-fluid">
        <div class="row">
            <div class="col-8 bg-dark" id="login_body">
            </div>
            <div class="col-4 bg-black vh-100 pt-5">
                <form id ="account" method="post" class="needs-validation">
                    <div class="d-md-flex justify-content-sm-end">
                        <button type="button" class="btn-close btn-close-white" aria-label="Close" onclick="cancelForm()"></button>
                    </div>
                    <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                    <div class="container-fluid text-black w-75 mt-5 pt-5">
                        <div class="top text-white text-center">
                            <h2>Welcome!</h2>
                        </div>
                        <div class="form-floating mb-3">
                            <input asp-for="Input.Email" type="text" class="form-control" id="floatingInput"
                                   placeholder="name@example.com">
                            <label asp-for="Input.Email" for="floatingInput" class="form-label">Username</label>
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>
                        <div class="form-floating mb-3">
                            <input asp-for="Input.Password" type="password" class="form-control" id="floatingInput"
                                   placeholder="password">
                            <label asp-for="Input.Password" for="floatingInput" class="form-label">Password</label>
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>
                        <div class="d-grid gap-2">
                            <label asp-for="Input.RememberMe" class="form-label text-white">
                                <input class="form-check-input" asp-for="Input.RememberMe" />
                                @Html.DisplayNameFor(m => m.Input.RememberMe)
                            </label>
                            <button type="submit" value="Login" class="btn btn-danger">Sign In</button>
                        </div>

                        <div class="d-grid gap-2 mt-3">
                            <a asp-page="./ForgotPassword" class="text-white text-center">Forgot your password?</a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</body>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
