@using Basecode.Data.Models
@model List<HrEmployee>
@{
    <title>LIST OF HRs</title>
    Layout = null;

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/HrList.css" />
    <script src="https://kit.fontawesome.com/b68ff1da95.js" crossorigin="anonymous"></script>
}

<body>
    <div class="container-fluid h-100">
        <div class="flex-nowrap">
            <div class="row h-100">
                <div class="col-auto bg-black col-md-4 col-lg-2 min-vh-100 d-flex flex-column p-0">
                    <a asp-action="AdminDashboard" class="navbar-brand px-3 py-4 m-0 d-flex justify-content-center align-items-center">
                        <img src="~/images/asi-logo.svg" alt="ASI Logo" class="logo-img w-100">
                    </a>
                    <div class="container p-0">
                        <ul class="nav nav-pills flex-column mt-2">
                            <li class="nav-item py-2 py-sm-0">
                                <a asp-action="AdminDashboard" class="py-4 rounded-0 nav-link bg-gray text-white" aria-current="page">
                                    <i class="fs-5 fa-brands fa-windows"></i>
                                    <span class="fs-4 ms-3 d-none d-sm-inline">
                                        Dashboard
                                    </span>
                                </a>
                            </li>
                            <li class="nav-item py-2 py-sm-0">
                                <a class="py-4 rounded-0 nav-link active text-white">
                                    <i class="fs-5 fa-solid fa-list"></i>
                                    <span class="fs-4 ms-3 d-none d-sm-inline">
                                        HR List
                                    </span>
                                </a>
                            </li>
                        </ul>
                    </div>
                    <div class="position-absolute bottom-0">
                        <a asp-action="HrList" class="py-4 rounded-0 nav-link text-white">
                            <i class="fa-sharp fa-solid fa-right-from-bracket"></i>
                            <span class="fs-4 ms-3 d-none d-sm-inline">
                                Logout
                            </span>
                        </a>
                    </div>
                </div>

                <div class="col content d-flex flex-column p-0">
                    <div class="hr-list">
                        <div class="bg">
                            <h1 class="header-text m-0">
                                LIST OF HRs
                            </h1>
                        </div>
                        <div class="hr-list-container">
                            <div class="hr-list-data">
                                <a asp-action="CreateHrAccount" class="create-account-button">
                                    Create Account
                                </a>

                                <table class="table">
                                    <thead>
                                        <tr>
                                            <th>ID</th>
                                            <th>Name</th>
                                            <th>Email Address</th>
                                            <th>Actions</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var hrEmployee in Model)
                                        {
                                            <tr>
                                                <td>@hrEmployee.Id</td>
                                                <td>@hrEmployee.Name</td>
                                                <td>@hrEmployee.Email</td>
                                                <td>
                                                    <a asp-route-id="@hrEmployee.Id" asp-action="EditHrAccount">
                                                        <img src="~/images/icons/edit.png" alt="Edit" class="hr-list-action-icon" />
                                                    </a>
                                                    <a asp-route-id="@hrEmployee.Id">
                                                        <img src="~/images/icons/delete.png" alt="Delete" class="hr-list-action-icon" />
                                                    </a>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>