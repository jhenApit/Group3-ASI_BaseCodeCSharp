@{
    ViewData ["Title"] = "Application Detail";
    Layout = "_SideBarAdmin";
}

<body>
<div class="container-header">
    <div class="row job-post-header">
        <div class="col-auto pe-0 d-flex align-items-lg-center">
            <a asp-controller="Hr" asp-action="ApplicantList" class="sub-menu-item">
                <span class="d-flex back-icon"><img src="~/images/icons/back-icon.png" /></span>
            </a>
        </div>
            <div class="col-auto d-flex align-items-lg-center">
            <h1 class="m-0">@ViewData["Title"]</h1>
        </div>
    </div>
</div>
<div class="body-container">
    <div class="row">
        <div class="col-auto me-auto">
            <div class="status px-3 py-1">
                FOR REVIEW
            </div>
        </div>
        <div class="col-auto">
            <button class="btn shortlist px-5 py-1">
                SHORTLIST
            </button>
        </div>
        <div class="col-auto">
                <button class="btn reject px-5 py-1">
                REJECT
            </button>
        </div>
    </div>
    <div class="row mt-3 py-2 px-1 partial-view-selector">
        <div class="d-flex col-auto align-items-center pe-0">
            Select information to view:
        </div>
        <div class="col">
            <select class="form-select py-1" id="partialViewSelector" name="partialViewSelector" required>
                <option selected value="1">APPLICANT PERSONAL INFORMATION</option>
                <option value="2">INTERVIEW / EXAMINATION STATUS</option>
            </select>
        </div>
    </div>

    <!-- APPLICANT PERSONAL INFORMATION VIEW -->
    <div id="PersonalInformation_View" class="mt-3">
        <!-- PERSONAL INFORMATION -->
        <div class="row text-header text-bold ps-2 mt-3">PERSONAL INFORMATION</div>
        <div class="row mt-3"> 
            <div class="col-auto">
                <img src="~/images/Photo-Placeholder.png"/>
            </div>
            <div class="col d-grid align-items-center">
                <div class="row form-group">
                    <div class="col-auto d-flex align-items-center pe-0">
                        <label class="d-inline">Full Name: </label>
                    </div>
                    <div class="col">
                        <input class="form-control" id="fullname" type="text" name="fullname" placeholder="" readonly />
                    </div>
                </div>
                <div class="row form-group">
                    <div class="col-auto d-flex align-items-center pe-0">
                        <label class="d-inline">Birth Date: </label>
                    </div>
                    <div class="col">
                        <input class="form-control" id="birthday" type="text" name="birthday" placeholder="" readonly />
                    </div>
                </div>
            </div>
        </div>
        <!-- CONTACT INFORMATION -->
        <div class="row text-header text-bold ps-2 mt-3">CONTACT INFORMATION</div>
        <div class="row mt-3">
            <div class="col d-grid align-items-center">
                <div class="row form-group">
                    <div class="col-2 d-flex align-items-center justify-content-end pe-0">
                        <label class="d-inline">Street Address: </label>
                    </div>
                    <div class="col">
                        <input class="form-control" id="street" type="text" name="street" placeholder="" readonly />
                    </div>
                </div>
                <div class="row form-group mt-3">
                    <div class="col-2 d-flex align-items-center justify-content-end pe-0">
                        <label class="d-inline">City: </label>
                    </div>
                    <div class="col">
                        <input class="form-control" id="city" type="text" name="city" placeholder="" readonly />
                    </div>
                </div>
                <div class="row form-group mt-3">
                    <div class="col-2 d-flex align-items-center justify-content-end pe-0">
                        <label class="d-inline">State / Province: </label>
                    </div>
                    <div class="col">
                        <input class="form-control" id="province" type="text" name="province" placeholder="" readonly />
                    </div>
                </div>
                <div class="row form-group mt-3">
                    <div class="col-2 d-flex align-items-center justify-content-end pe-0">
                        <label class="d-inline">Zip Code: </label>
                    </div>
                    <div class="col">
                        <input class="form-control" id="zipcode" type="text" name="zipcode" placeholder="" readonly />
                    </div>
                </div>
                <div class="row form-group mt-3">
                    <div class="col-2 d-flex align-items-center justify-content-end pe-0">
                        <label class="d-inline">Phone Number: </label>
                    </div>
                    <div class="col">
                        <input class="form-control" id="number" type="text" name="number" placeholder="" readonly />
                    </div>
                </div>
                <div class="row form-group mt-3">
                    <div class="col-2 d-flex align-items-center justify-content-end pe-0">
                        <label class="d-inline">Email Address: </label>
                    </div>
                    <div class="col">
                        <input class="form-control" id="email" type="text" name="email" placeholder="" readonly />
                    </div>
                </div>
            </div>
        </div>
        <!-- CHARACTER REFERENCE -->
        <div class="row text-header text-bold ps-2 mt-3">CHARACTER REFERENCE</div>
        <div class="row mt-3">
            <h5 class="ms-3">Reference 1</h5>
            <div class="row">
                <div class="col d-grid align-items-center">
                    <div class="row form-group">
                        <div class="col-2 d-flex align-items-center justify-content-end pe-0">
                            <label class="d-inline">Full Name: </label>
                        </div>
                        <div class="col">
                            <input class="form-control" id="name" type="text" name="name" placeholder="" readonly />
                        </div>
                    </div>
                    <div class="row form-group mt-3">
                        <div class="col-2 d-flex align-items-center justify-content-end pe-0">
                            <label class="d-inline">Relationship: </label>
                        </div>
                        <div class="col">
                            <input class="form-control" id="relationship" type="text" name="relationship" placeholder="" readonly />
                        </div>
                    </div>
                    <div class="row form-group mt-3">
                        <div class="col-2 d-flex align-items-center justify-content-end pe-0">
                            <label class="d-inline">Email Address: </label>
                        </div>
                        <div class="col">
                            <input class="form-control" id="email" type="text" name="email" placeholder="" readonly />
                        </div>
                    </div>
                    <div class="row form-group mt-3">
                        <div class="col-2 d-flex align-items-center justify-content-end pe-0">
                            <label class="d-inline">Phone Number: </label>
                        </div>
                        <div class="col">
                            <input class="form-control" id="number" type="text" name="number" placeholder="" readonly />
                        </div>
                    </div>
                </div>
            </div>
            <h5 class="ms-3 mt-4">Reference 2</h5>
            <div class="row">
                <div class="col d-grid align-items-center">
                    <div class="row form-group">
                        <div class="col-2 d-flex align-items-center justify-content-end pe-0">
                            <label class="d-inline">Full Name: </label>
                        </div>
                        <div class="col">
                            <input class="form-control" id="name" type="text" name="name" placeholder="" readonly />
                        </div>
                    </div>
                    <div class="row form-group mt-3">
                        <div class="col-2 d-flex align-items-center justify-content-end pe-0">
                            <label class="d-inline">Relationship: </label>
                        </div>
                        <div class="col">
                            <input class="form-control" id="relationship" type="text" name="relationship" placeholder="" readonly />
                        </div>
                    </div>
                    <div class="row form-group mt-3">
                        <div class="col-2 d-flex align-items-center justify-content-end pe-0">
                            <label class="d-inline">Email Address: </label>
                        </div>
                        <div class="col">
                            <input class="form-control" id="email" type="text" name="email" placeholder="" readonly />
                        </div>
                    </div>
                    <div class="row form-group mt-3">
                        <div class="col-2 d-flex align-items-center justify-content-end pe-0">
                            <label class="d-inline">Phone Number: </label>
                        </div>
                        <div class="col">
                            <input class="form-control" id="number" type="text" name="number" placeholder="" readonly />
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- ADDITIONAL INFORMATION -->
        <div class="row text-header text-bold ps-2 mt-3">ADDITIONAL INFORMATION</div>
        <div class="row mt-3">
            <div class="row form-row mt-3">
                <div class="col-12 form-group">
                    <label for="additional">How did you hear about us?</label>
                    <select class="form-select mt-2" id="additional" name="additional" disabled>
                        <option selected disabled value="">Choose...</option>
                        <option value="LinkedIn Job Post">LinkedIn Job Post</option>
                        <option value="Recruitment Team">Recruitment Team</option>
                        <option value="Peers & Friends">Peers & Friends</option>
                        <option value="Social Media Platforms">Social Media Platforms</option>
                        <option value="Career Page">Career Page</option>
                        <option value="Others">Others</option>
                    </select>
                </div>
            </div>
        </div>
        <!-- ATTACHMENTS -->
        <div class="row text-header text-bold ps-2 mt-3">ATTACHMENTS</div>
        <div class="row mt-3">
            <div class="col-auto ">
                <div id="resume" class="text-center resume">
                    <img src="~/images/icons/pdf-icon.png" />
                    <br />
                    <span>Resume.pdf</span>
                </div>
            </div>
        </div>
    </div>

    <!-- INTERVIEW / EXAMINATION STATUS VIEW -->
    <div id="InterviewExamStatus_View" class="mt-3">
        <!-- APPLICANT INFORMATION SUMMARY -->
        <div class="row text-header text-bold ps-2 mt-3">APPLICANT INFORMATION SUMMARY</div>
        <div class="row mt-3">
            <div class="col d-grid align-items-center">
                <div class="row form-group">
                    <div class="col-2 d-flex align-items-center justify-content-end pe-0">
                        <label class="d-inline">Full Name: </label>
                    </div>
                    <div class="col">
                        <input class="form-control" id="fullname" type="text" name="fullname" placeholder="" readonly />
                    </div>
                </div>
                <div class="row form-group mt-3">
                    <div class="col-2 d-flex align-items-center justify-content-end pe-0">
                        <label class="d-inline">Job Applied: </label>
                    </div>
                    <div class="col">
                        <input class="form-control" id="jobapplied" type="text" name="jobapplied" placeholder="" readonly />
                    </div>
                </div>
                <div class="row form-group mt-3">
                    <div class="col-2 d-flex align-items-center justify-content-end pe-0">
                        <label class="d-inline">Date Applied: </label>
                    </div>
                    <div class="col">
                        <input class="form-control" id="dateapplied" type="text" name="dateapplied" placeholder="" readonly />
                    </div>
                </div>
            </div>
        </div>
        <!-- INTERVIEW/EXAMINATION STATUS -->
        <div class="row text-header text-bold ps-2 mt-3">INTERVIEW/EXAMINATION STATUS</div>
        <table class="table mt-3">
            <thead>
                <tr class="table-header">
                    <th scope="col" class="col-4">Interview / Exam</th>
                    <th scope="col" class="col-4">Interviewer / Examiner</th>
                    <th scope="col" class="col-2">Date</th>
                    <th scope="col" class="col-2">Status</th>
                </tr>
            </thead>
            <tbody class="text-center">
                <tr>
                    <td>HR Interview</td>
                    <td>Jane Marie Doe</td>
                    <td>July 1, 2023</td>
                    <td>
                        <span class="passed px-4 py-1">
                            PASSED
                        </span>
                    </td>
                </tr>
                <tr>
                    <td>Technical Exam</td>
                    <td>Jane Marie Doe</td>
                    <td>July 2, 2023</td>
                    <td>
                        <span class="passed px-4 py-1">
                            PASSED
                        </span>
                    </td>
                </tr>
                <tr>
                    <td>Technical Interview</td>
                    <td>Jane Marie Doe</td>
                    <td>July 3, 2023</td>
                    <td>
                        <span class="passed px-4 py-1">
                            PASSED
                        </span>
                    </td>
                </tr>
                <tr>
                    <td>Background Check</td>
                    <td>Jane Marie Doe</td>
                    <td>July 4, 2023</td>
                    <td>
                        <span class="passed px-4 py-1">
                            PASSED
                        </span>
                    </td>
                </tr>
                <tr>
                    <td>Final Interview</td>
                    <td>Jane Marie Doe</td>
                    <td>July 5, 2023</td>
                    <td>
                        <span class="passed px-4 py-1">
                            PASSED
                        </span>
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
</div>
</body>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script>
    var PersonalInfoView = $('#PersonalInformation_View');
    var InterviewStatus = $('#InterviewExamStatus_View');
    $(document).ready(function () {
        InterviewStatus.addClass("d-none");
    });
    $("#partialViewSelector").on("change", function () {
        var Id = $(this).val()
        if (Id == 1) {
            InterviewStatus.addClass("d-none");
            PersonalInfoView.removeClass("d-none");
        } else {
            InterviewStatus.removeClass("d-none");
            PersonalInfoView.addClass("d-none");
        }
    });
</script>