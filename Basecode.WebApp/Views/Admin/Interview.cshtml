                    <a class="dropdown-item" href="#">John Doe</a>
                    <a class="dropdown-item" href="#">John Doe</a>
                </div>
            </div>
        </div>
        <button class="add-interviewer text-nowrap">
            <p class="select-text">
                Add Interviewer
            </p>
        </button>
    </div>
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
    <div class="interviewer d-flex flex-row">
        <div class="select-interviewer flex-grow-1">
            <p class="select-text">Select Interviewer:</p>
            <div class="dropdown flex-grow-1">
                <button class="dropdown-button" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
