@{
    ViewData["Title"] = "Application Form";
}
<div class="application-form-container">
    <div class="row">
        <h1 class="text-center">Software Engineer</h1>
    </div>
    <div class="row mt-5 px-5">
        <div class="col d-flex form-header mb-3">
            <a asp-controller="Applicant" asp-action="JobDescription">
                <p class="text-bold text-black mb-1 align-self-center me-3">Job Details</p>
            </a>
            <p class="text-bold mb-1 ms-5 align-self-center text-red">Application</p>
        </div>
    </div>
    <div class="form">
        <form method="post" enctype="multipart/form-data">
            <!--Resume-->
            <div class="row text-header text-bold ps-2">Resume</div>
            <div class="row form-row form-group file-drop my-3 mx-1 py-4">
                <div>
                    <img src="/images/icons/resume-upload.png" />
                </div>
                <input type="file" id="resumeFile" name="resumeFile" class="file-input" onchange="displayFileName()" />
                <label for="resumeFile" class="file-label">
                    <span id="fileText" class="file-text text-bold">Choose a file or Drag it here</span>
                </label>

                <script>
                    function displayFileName() {
                        var fileInput = document.getElementById("resumeFile");
                        var fileName = fileInput.files[0].name;
                        var fileText = document.querySelector(".file-label .file-text");
                        fileText.textContent = fileName;
                    }
                </script>
            </div>
            <!--Personal Information-->
            <div class="row text-header text-bold ps-2 mt-4">Personal Information</div>
            <div class="row form-row mt-3">
                <label>Name: </label>
                <div class="col-sm-6 col-md-4 form-group mt-2">
                    <input class="form-control" id="firstname" type="text" name="firstname" placeholder="First Name" />
                </div> 
                <div class="col-sm-6 col-md-4 form-group mt-2">
                    <input class="form-control" id="middlename" type="text" name="middlename" placeholder="Middle Name" />
                </div>
                <div class="col-sm-6 col-md-4 form-group mt-2">
                    <input class="form-control" id="lastname" type="text" name="lastname" placeholder="Last Name" />
                </div>
            </div>
            <div class="row form-row mt-3">
                <div class="col-12 form-group mt-1">
                    <label for="birthday">Birthday:</label>
                    <input class="form-control" id="birthday" type="date" name="birthday" />
                </div>
            </div>
            <div class="row form-row mt-3">
                <label>Photo (Optional):</label>
            </div>
            <div class="col-sm-6 col-md-3 form-group file-drop mt-1 mx-1 py-4">
                <div>
                    <img src="/images/icons/upload-image.png" />
                </div>
                <input type="file" id="photo" name="photo" class="file-input" onchange="displayImageName('photo', 'photoText')" />
                <label for="photo" class="file-label">
                    <span id="photoText" class="file-text">Choose a file<br />or<br />Drag it here</span>
                </label>

                <script>
                    function displayImageName(photoInputId, photoTextId) {
                        var photoInput = document.getElementById(photoInputId);
                        var photoFileName = photoInput.files[0].name;
                        var photoText = document.getElementById(photoTextId);
                        photoText.textContent = photoFileName;
                    }
                </script>
            </div>
            <!--Contact Information-->
            <div class="row text-header text-bold ps-2 mt-4">Contact Information</div>
            <div class="row form-row mt-3">
                <label>Address: </label>
                <div class="col-12 form-group mt-2">
                    <input class="form-control" id="street" type="text" name="street" placeholder="Street" />
                </div>
                <div class="col-sm-6 col-md-4 form-group mt-2">
                    <input class="form-control" id="city" type="text" name="city" placeholder="City" />
                </div>
                <div class="col-sm-6 col-md-4 form-group mt-2">
                    <input class="form-control" id="province" type="text" name="province" placeholder="Province / State" />
                </div>
                <div class="col-sm-6 col-md-4 form-group mt-2">
                    <input class="form-control" id="zipcode" type="number" name="zipcode" placeholder="Postal / Zipcode" />
                </div>
            </div>
            <div class="row form-row mt-3">
                <div class="col-sm-6 form-group mt-1">
                    <label for="number">Phone Number:</label>
                    <input class="form-control" id="number" type="number" name="number" />
                </div>
                <div class="col-sm-6 form-group mt-1">
                    <label for="email">Email Address:</label>
                    <input class="form-control" id="email" type="text" name="email" />
                </div>
            </div>
            <!--References-->
            <div class="row text-header text-bold ps-2 mt-4">References</div>
            <div class="row form-row mt-3">
                <label class="text-bold text-center">Please list two (2) references (who are not family or relatives) that are familiar with your work life.</label>
            </div>
            <div class="row form-row mt-3">
                <label class="text-bold">Reference 1</label>
                <div class="row form-row">
                    <div class="col-sm-6 col-md-4 form-group mt-2">
                        <label for="name">Full Name: </label>
                        <input class="form-control" id="name" type="text" name="name" />
                    </div>
                    <div class="col-sm-6 col-md-4 form-group mt-2">
                        <label for="relationship">Relationship:</label>
                        <input class="form-control" id="relationship" type="text" name="relationship" />
                    </div>
                    <div class="col-sm-6 col-md-4 form-group mt-2">
                        <label for="email">Email Adress:</label>
                        <input class="form-control" id="email" type="text" name="email" />
                    </div>
                    <div class="col-sm-6 col-md-4 form-group mt-2">
                        <label for="number">Phone Number:</label>
                        <input class="form-control" id="number" type="number" name="number" />
                    </div>
                </div>
            </div>
            <div class="row form-row mt-3">
                <label class="text-bold">Reference 2</label>
                <div class="row form-row">
                    <div class="col-sm-6 col-md-4 form-group mt-2">
                        <label for="name">Full Name: </label>
                        <input class="form-control" id="name" type="text" name="name" />
                    </div>
                    <div class="col-sm-6 col-md-4 form-group mt-2">
                        <label for="relationship">Relationship:</label>
                        <input class="form-control" id="relationship" type="text" name="relationship" />
                    </div>
                    <div class="col-sm-6 col-md-4 form-group mt-2">
                        <label for="email">Email Adress:</label>
                        <input class="form-control" id="email" type="text" name="email" />
                    </div>
                    <div class="col-sm-6 col-md-4 form-group mt-2">
                        <label for="number">Phone Number:</label>
                        <input class="form-control" id="number" type="number" name="number" />
                    </div>
                </div>
            </div>
            <!--Additional Information-->
            <div class="row text-header text-bold ps-2 mt-4">Additional Information</div>
            <div class="row form-row mt-3">
                <div class="col-12 form-group mt-1">
                    <label for="additional">How did you hear about us?</label>
                    <select class="form-select mt-3" id="additional" name="additional">
                        <option value="N/A"></option>
                        <option value="LinkedIn Job Post">LinkedIn Job Post</option>
                        <option value="Recruitment Team">Recruitment Team</option>
                        <option value="Peers & Friends">Peers & Friends</option>
                        <option value="Social Media Platforms">Social Media Platforms</option>
                        <option value="Career Page">Career Page</option>
                        <option value="Others">Others</option>
                    </select>
                </div>
            </div>
            <div class="row form-row mt-3">
                <div class="text-center mt-3">
                    <input type="checkbox" id="agreeCheckbox" name="agreeCheckbox" />
                    <label for="agreeCheckbox" class="checkmark"></label>
                    <span class="terms-link">I agree to the <a asp-controller="Applicant" asp-action="TermsAndConditions"><span class="text-red">terms and conditions</span></a></span>
                </div>
                <div class="col d-flex justify-content-center">
                    <button class="btn btn-primary mt-2 py-2 px-5" type="button">
                        <a asp-controller="Applicant" asp-action="ApplicationForm">
                            <h5 class="submit-btn m-0">Submit</h5>
                        </a>
                    </button> 
                </div>
            </div>
        </form>
    </div>
    <div class="text-center mt-5">
        <div class="text-footer">© 2019 Alliance Software Incorporated. All Rights Reserved</div>
        <div class="mt-2">
            <img src="~/images/asi-logo-invert.png" alt="Footer Image">
        </div>
    </div>
</div>