@{
    Layout = "_SideBarAdmin";
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/CreateInterview.css" />
    <script src="https://kit.fontawesome.com/b68ff1da95.js" crossorigin="anonymous"></script>
}

<body>
    <div class="heading">
        <div class="heading-text">
            <p class="m-0 fw-bold">Edit Interview</p>
        </div>
    </div>
    <form method="post" class="create-interview-form">
        <div>
            <a asp-action="Interview" class="back d-flex gap-2 text-decoration-none align-items-center justify-content-start">
                <i class="fa-solid fa-arrow-left"></i>
                <p class="m-0">Back</p>
            </a>
        </div>
        <div class="section-interview">
            <div class="d-flex flex-row align-items-center">
                <p class="section-text">
                    INTERVIEWER DETAILS
                </p>
            </div>
            <div class="line"></div>
        </div>
        <div class="pb-2">
            <div class="row">
                <div class="col">
                    <div class="form-group">
                        <label for="interviewerName">Name:</label>
                        <input type="text" class="form-control" id="interviewerName" placeholder="Jane Marie Doe">
                    </div>
                </div>
                <div class="col">
                    <div class="form-group">
                        <label for="email">Email:</label>
                        <input type="email" class="form-control" id="interviewerEmail" placeholder="JaneMarieDoe@gmail.com">
                    </div>
                </div>
            </div>
        </div>
        <div class="section-interview">
            <div class="d-flex flex-row align-items-center">
                <p class="section-text">
                    APPLICANT
                </p>
            </div>
            <div class="line"></div>
        </div>
        <div class="pb-2">
            <div class="row align-items-center">
                <div class="col-md-auto">
                    <label for="applicantName">Name:</label>
                </div>
                <div class="col">
                    <select class="form-select w-50" id="selectApplicant" name="selectApplicant" required>
                        <option selected disabled value="">Select an Applicant...</option>
                        <option value="applicant chosen">John Doe</option>
                    </select>
                </div>
            </div>
        </div>
        <div class="section-interview">
            <div class="d-flex flex-row align-items-center">
                <p class="section-text">
                    AVAILABILITY
                </p>
            </div>
            <div class="line"></div>
        </div>
        <div class="pb-2">
            <div class="row align-items-center">
                <div class="col">
                    <label for="date">Date:</label>
                    <input class="form-control" id="date" type="date" name="date" required />
                </div>
                <div class="col d-flex flex-row gap-4">
                    <div class="col w-25">
                        <label for="startTime">Time Start:</label>
                        <input class="form-control" id="startTime" type="time" name="startTime" required />
                    </div>
                    <div class="col w-25">
                        <label for="endTime">Time End:</label>
                        <input class="form-control" id="endTime" type="time" name="endTime" required />
                    </div>
                </div>
            </div>
        </div>
        <div class="section-interview">
            <div class="d-flex flex-row align-items-center">
                <p class="section-text">
                    INTERVIEW
                </p>
            </div>
            <div class="line"></div>
        </div>
        <div class="pb-2">
            <div class="row form-row">
                <div class="col-12 form-group">
                    <label for="interviewType">Interview Type:</label>
                    <select class="form-select w-50" id="interviewType" name="interviewType" required>
                        <option selected disabled value="">Select an interview type...</option>
                        <option value="For HR Interview">For HR Interview</option>
                        <option value="For Technical Interview">For Technical Interview</option>
                        <option value="For Technical Exam">For Technical Exam</option>
                        <option value="Undergoing Background Check">Undergoing Background Check</option>
                        <option value="For Final Interview">For Final Interview</option>
                    </select>
                </div>
            </div>
            <div class="row py-4">
                <div class="form-group">
                    <label for="notes">Notes/Remarks:</label>
                    <textarea class="form-control" id="notes" rows="3"></textarea>
                </div>
            </div>
        </div>
        <div class="d-grid d-md-flex justify-content-md-end">
            <button class="btn b-blue px-4" data-toggle="modal" data-target="#overlapModal">EDIT SCHEDULE</button>
        </div>
    </form>
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
</body>

<!-- Overlap Modal -->
<div class="modal fade" id="overlapModal" tabindex="-1" role="dialog" aria-labelledby="overlapModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content px-3 py-4">
            <div class="modal-body">
                <p class="text-center"><strong>Inputed Date and Time ovelap with other Interviews.</strong></p>
                <div class="d-flex justify-content-center align-items-center gap-3">
                    <button type="button" class="btn b-red px-5 mt-2">OKAY</button>
                </div>
            </div>
        </div>
    </div>
</div>