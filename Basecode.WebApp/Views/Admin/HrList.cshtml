@using Basecode.Data.Models
@model List<HrEmployee>
@{
    <title>LIST OF HRs</title>
    Layout = null;
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="~/css/hr-list.css" />
    
}

<div class="page">
    <div class="menu">
        <ul>
            <li class="logo" />
            <li>
                <a asp-action="AdminDashboard">
                    <svg class="menu-icon" xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-windows" viewBox="0 0 16 16">
                        <path d="M6.555 1.375 0 2.237v5.45h6.555V1.375zM0 13.795l6.555.933V8.313H0v5.482zm7.278-5.4.026 6.378L16 16V8.395H7.278zM16 0 7.33 1.244v6.414H16V0z" />
                    </svg>
                    Dashboard
                </a>
            </li>
            <li>
                <a href="#hrlist" class="active">
                    <svg class="menu-icon" xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-person-fill" viewBox="0 0 16 16">
                        <path d="M3 14s-1 0-1-1 1-4 6-4 6 3 6 4-1 1-1 1H3Zm5-6a3 3 0 1 0 0-6 3 3 0 0 0 0 6Z" />
                    </svg>
                    HR List
                </a>
            </li>
        </ul>
    </div>
    <div class="hr-list">
        <div class="bg">
            <h1 class="header">
                LIST OF HRs
            </h1>
        </div>
        <div class="hr-list-container">
            <div class="hr-list-data">
                <a asp-action="CreateHrAccount" class="create-account-button">
                    Create Account
                </a>
                
                <table class="table">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Name</th>
                            <th>Email Address</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach(var hrEmployee in Model)
                        {
                            <tr>
                                <td>@hrEmployee.Id</td>
                                <td>@hrEmployee.Name</td>
                                <td>@hrEmployee.Email</td>
                                <td>
                                    <a asp-route-id="@hrEmployee.Id" asp-action="EditHrAccount">
                                        <img src="~/images/icons/edit.png" alt="Edit" class="hr-list-action-icon" />
                                    </a>
                                    <!-- Button trigger modal -->
                                    <a href="#" data-bs-toggle="modal" data-bs-target="#@("modal-" + hrEmployee.Id)">
                                        <img src="~/images/icons/delete.png" alt="Delete" class="hr-list-action-icon" />
                                    </a>
                                    
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
                
        </div>
        </div>
    </div>
</div>

 @foreach(var hrEmployee in Model)
{
<!-- Modal -->
    <div class="modal fade" id="@("modal-" + hrEmployee.Id)" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header text-center">
                    <h5 class="modal-title" id="exampleModalLabel">Warning!</h5>

                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body text-center">
                    <p>
                        @(hrEmployee.Name + "'s") account will be <strong>deleted</strong>
                    </p>
                    <p>
                        <strong>This cannot be undone</strong>
                    </p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">CANCEL</button>
                    <button type="button" class="btn btn-danger" data-bs-target="#@("modal2-" + hrEmployee.Id)" data-bs-toggle="modal" data-bs-dismiss="modal">
                        DELETE
                    </button>
                </div>
            </div>
        </div>
    </div>
    <div class="modal fade" id="@("modal2-" + hrEmployee.Id)" aria-hidden="true" aria-labelledby="exampleModalToggleLabel2" tabindex="-1">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalToggleLabel2">Success</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <p>
                        @(hrEmployee.Name + "'s") account deleted successfully
                    </p>
                </div>
                <div class="modal-footer">
                    <a type="button" class="btn btn-outline-secondary" asp-action="DeleteHrAccount" asp-route-id="@hrEmployee.Id">OK</a>
                </div>
            </div>
        </div>
    </div>
}
