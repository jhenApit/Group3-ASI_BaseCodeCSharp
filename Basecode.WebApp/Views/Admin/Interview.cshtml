                    <a class="dropdown-item" href="#">John Doe</a>
                    <a class="dropdown-item" href="#">John Doe</a>
                </div>
            </div>
        </div>
        <button class="add-interviewer text-nowrap">
            <p class="select-text">
                Add Interviewer
            </p>
        </button>
    </div>
    <div class="upcoming-interview">
        <div class="d-flex flex-row align-items-center">
            <p class="upcoming-text">
                UPCOMING INTERVIEWS
            </p>
            <button class="new-interview text-nowrap">
                <p class="select-text">
                    NEW INTERVIEW
                </p>
            </button>
        </div>
        <div class="line"></div>
    </div>
    <div class="table-style">
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">Date and Time</th>
                    <th scope="col">Applicant</th>
                    <th scope="col">Type</th>
                    <th scope="col">Action</th>
                </tr>
