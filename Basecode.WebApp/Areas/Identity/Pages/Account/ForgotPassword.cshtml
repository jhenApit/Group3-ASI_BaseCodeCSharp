@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "Forgot your password";
    Layout = null;
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
}
<script>
    function cancelForm() {
        window.location.href = "/";
    }
</script>

<body>
    <div class="container-fluid">
        <div class="row">
            <div class="col-8 bg-dark" id="login_body">
            </div>
            <div class="col-4 bg-black vh-100 pt-5">
                <form id="account" method="post" class="needs-validation">
                    <div class="d-md-flex justify-content-sm-end">
                        <button type="button" class="btn-close btn-close-white" aria-label="Close" onclick="cancelForm()"></button>
                    </div>
                    <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                    <div class="container-fluid text-black w-75 mt-5 pt-5">
                        <div class="top text-white text-center">
                            <h2>Enter your email</h2>
                        </div>
                        <div class="form-floating mb-3">
                            <input asp-for="Input.Email" class="form-control" autocomplete="email" aria-required="true" placeholder="name@example.com" />
                            <label asp-for="Input.Email" class="form-label"></label>
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>
                        <div class="d-grid gap-2">
                            <button type="submit" class="w-100 btn btn-lg btn-primary">Submit</button>
                        </div>
                        <div class="d-grid gap-2">
                            <a class="text-center text-white mt-3" asp-area="Identity" asp-page="/Account/Login">Back to login</a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</body>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
